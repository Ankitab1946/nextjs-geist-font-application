# BDD Demo Environment Variables
# Copy this file to .env and update with your actual values

# Database Configuration
USE_SQL_SERVER=false
SQLITE_DB_PATH=data/demo.db
SQL_SERVER_CONNECTION=Driver={ODBC Driver 17 for SQL Server};Server=localhost;Database=BDDDemo;Trusted_Connection=yes;

# AWS Bedrock Configuration (for real implementation)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0

# Jira Xray Configuration (for real implementation)
JIRA_BASE_URL=https://your-company.atlassian.net
JIRA_USERNAME=your-jira-username
JIRA_API_TOKEN=your-jira-api-token
XRAY_PROJECT_KEY=DEMO

# Application Settings
MOCK_MODE=true
DEBUG=true

# FastAPI Server Settings
FASTAPI_HOST=127.0.0.1
FASTAPI_PORT=8001

# Selenium Settings
SELENIUM_HEADLESS=true
SELENIUM_TIMEOUT=10
